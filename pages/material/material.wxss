/* pages/material/material.wxss */
page{
  width: 100%;
  height: 100%;
  background: #fff;
}
/* swiper-tab */
.swiper-tab{
  width:100%;
  height:100rpx;
  background:rgba(255,255,255,1);
  text-align: center;
  line-height: 100rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}
.swiper-tab-item{
  width: 25%; 
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:#6E6E6E;
  position: relative;
}
.swiper-tab-item .bottom-border{
  position: absolute;
  bottom: 0;
  left: 0 ;
  right: 0;
  margin: 0 auto;
  width:44rpx;
  height:6rpx;
  background:rgba(255,16,16,1);
  border-radius:3rpx;
  display: none;
}
.swiper-tab-item .bottom-border.active{
  display: block;
}
.active{
  color:#000000;
  /* border-bottom: 4rpx solid #F65959; */
}
swiper{
  text-align: center;
  height: 100%;
}
/* swiper-tab end */

/* .material */
.material{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
 
}
.material .item{
  box-sizing: border-box;
  background: #fff;
  padding: 0 30rpx;
  overflow: hidden;
  margin-bottom:16rpx;
  border-bottom: 16rpx solid #f6f6f6;
}
.material .user{
  width: 100%;
  height:100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(238,238,238,1);
}
.material .user .left{
  width: 50%;
  display: flex;
  align-items: center;
  height: 100%;
}
.material .user .left image{
  width:52rpx;
  height:52rpx;
  border-radius:50%;
  margin-right: 18rpx;
}
.material .user .left text{
  font-size:22rpx;
  font-family:PingFangSC-Light;
  font-weight:400;
  color:rgba(0,0,0,1);
}
.material .user .right{
  width:200rpx;
  height:46rpx;
  background:rgba(255,27,28,0);
  border:1rpx solid rgba(0, 0, 0, 1);
  border-radius:23rpx;
  font-size:22rpx;
  font-family:PingFangSC-Light;
  font-weight:400;
  color:rgba(0,0,0,1);
  text-align: center;
  line-height: 46rpx;
}
.material .title{
  width: 100%;
  height: 40rpx;
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.material .title view:first-child{
  min-width:120rpx;
  height:40rpx;
  background:rgba(238,238,238,0);
  border:1rpx solid rgba(255, 16, 16, 1);
  border-radius:6rpx;
  font-size:20rpx;
  font-family:PingFangSC-Light;
  font-weight:300;
  color:rgba(255,16,16,1);
  text-align: center;
  line-height: 40rpx;
}
.material .title view:last-child{
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(0,0,0,1);
  margin-left: 20rpx;
}
.material .content{
  margin:30rpx 0;
  width:100%;
  min-height:56rpx;
  font-size:22rpx;
  font-family:PingFangSC-Light;
  font-weight:300;
  color:rgba(110,110,110,1);
  line-height:34rpx;
  text-align: left;
}
.material .image-box{
  width: 100%;
  min-height: 220rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
  flex-wrap: wrap;
}
.material .image-box .items{
  width:220rpx;
  height:220rpx;
  border-radius:10rpx;
  margin-bottom: 20rpx;
}
.material .image-box .items image{
  width: 100%;
  height: 100%;
  border-radius:10rpx;
}
/* .material end */