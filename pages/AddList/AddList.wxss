/* pages/AddList/AddList.wxss */
.border{
  width:100%;
  height:16rpx;
  background:rgba(246,246,246,1);
}
.list-name{
  width:100%;
  height:100rpx;
  background:rgba(255,255,255,1);
  box-sizing: border-box;
  padding:0 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #eeeeee;
}
.list-name input{
  width:80%;
  height:30rpx;
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(0,0,0,1);
}
.list-name text{
  font-size:18rpx;
  font-family:PingFangSC-Light;
  font-weight:400;
  color:rgba(187,187,187,1);
}
.list-content{
  width:100%;
  height:300rpx;
  background:rgba(255,255,255,1);
  border-bottom: 1rpx solid #eeeeee;
  box-sizing: border-box;
  padding:30rpx;
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(0,0,0,1);
}
.list-content textarea{
  width: 100%;
  height: 90%;
}
.list-content .number{
  width: 100%;
  text-align: right;
  font-size:18rpx;
  font-family:PingFangSC-Light;
  font-weight:300;
  color:rgba(187,187,187,1);
}
.save-list{
  width:100%;
  height:140rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 0rpx 27rpx 0rpx rgba(0, 0, 0, 0.03);
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.save-list .save{
  width:690rpx;
  height:80rpx;
  background:linear-gradient(-30deg,rgba(251,91,34,1),rgba(255,16,16,1));
  border-radius:40rpx;
  font-size:26rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(255,255,255,1);
  text-align: center;
  line-height: 80rpx;
}