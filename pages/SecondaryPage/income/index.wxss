/* pages/SecondaryPage/MyIncome/index.wxss */
/* income */
.income{
  width:690rpx;
  height:300rpx;
  background:linear-gradient(90deg,rgba(247,63,80,1),rgba(248,82,129,1));
  border-radius:10rpx;
  margin:0 auto;
  overflow: hidden;
  margin-top: 30rpx;
}
.income .income-title{
  width: 100%;
  display: flex;
  align-items: center;
  margin-top: 56rpx;
  box-sizing: border-box;
  padding: 0 50rpx;

}
.income .income-title .left{
  width:31rpx;
  height:35rpx;
  float: left;
}
.income .income-title .left image{
  width: 100%;
  height: 100%;
}
.income .income-title .right{
  box-sizing: border-box;
  padding-top: 20rpx;
  font-size:28rpx;
  font-family:PingFangSC-Light;
  font-weight:300;
  color:rgba(255,255,255,1);
  margin-left: 12rpx;
}
.income .money{
  font-size:60rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(255,255,255,1);
  box-sizing: border-box;
  padding: 0 50rpx;
}
.income .money-day{
  width: 100%;
  height: 30rpx;
  margin-top: 44rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  
}
.income .money-day .items{

  width: 33.3%;
  height: 100%;
  font-size:22rpx;
  font-family:PingFangSC-Light;
  font-weight:300;
  color:rgba(255,255,255,1);
  text-align: center;
  line-height: 30rpx;
  border-right:1rpx solid rgba(255,255,255,1);
}
.income .money-day .items:last-child{
  border-right:none;
}

/* income end */

/* income-items */
.income-content{
  margin-top: 40rpx;
}
.income-items{
  width:100%;
  height:140rpx;
  background:rgba(255,255,255,1);
  border-bottom: 1rpx solid #eeeeee;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
}
.income-items .left{
  width:100rpx;
  height:100rpx;
  border-radius:50%;
  margin-right: 20rpx;
  float: left;
}
.income-items .left image{
  width:100%;
  height:100%;
  border-radius:50%;
}
.income-items .center{
  width: 300rpx;
  height: 100%;
  float: left;
}
.income-items .center view:first-child{
  font-size:22rpx;
  font-family:PingFangSC-Light;
  font-weight:300;
  color:rgba(110,110,110,1);
  margin-top: 16rpx;
}
.income-items .center view:last-child{
  font-size:22rpx;
  font-family:PingFangSC-Light;
  font-weight:300;
  color:rgba(110,110,110,1);
  margin-top: 30rpx;
}
.income-items .right{
  min-width:93rpx;
  height:100%;
  float: right;
  font-size:40rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(0,0,0,1);
  line-height: 110rpx;
}
/* income-items end */