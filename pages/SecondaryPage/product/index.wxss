/* buynum */
.buynum {
  width: 250rpx;
  height: 52rpx;
  float: left;
  
}

.buynum .minus, .buynum .add {
  width: 72rpx;
  height: 100%;
  border: 1rpx solid#eeeeee;
  float: left;
  color: #bbbbbb;
  text-align: center;
  line-height: 50rpx;

}
.buynum .add{
    border-top-right-radius: 25rpx;
  border-bottom-right-radius: 25rpx;
}
.buynum .minus{
    border-top-left-radius: 25rpx;
  border-bottom-left-radius: 25rpx;
}

.buynum .minus.active, .buynum .add.active {
  border: 1rpx solid #bbbbbb;
  color: #000;
}

.buynum .minus, .buynum .minus.active {
  border-right: none;
}

.buynum .add, .buynum .add.active {
  border-left: none;
}

.buynum .num {
  width: 100rpx;
  height: 100%;
  border: 1rpx solid #bbbbbb;
  text-align: center;
  line-height: 50rpx;
  float: left;
  font-size: 30rpx;
}

/* buy num end */

