/* pages/SecondaryPage/LoadPay/index.wxss */
/* pay time */
.pay-time{
  width:750rpx;
  height:68rpx;
  background:rgba(217,189,140,1);
  display: flex;
  justify-content: center;
  align-items: center;
}
.pay-time image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}
.pay-time .title{
  /* width: 200rpx; */
  font-size:22rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
}
/* pay-time end */

/* pay-status */
.pay-status{
  width: 100%;
  height: 174rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.pay-status .left{
  width: 150rpx;
  height: 113rpx;
}
.pay-status .left image{
  width: 100%;
  height: 100%;
}
.pay-status .right{
  width: 300rpx;
  height: 114rpx;
  margin-left: 30rpx;
}
.pay-status .right view:first-child{
  width:88rpx;
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(0,0,0,1);
  margin-top:30rpx;
}
.pay-status .right view:last-child{
  width:200rpx;
}
.pay-status .right view text:first-child{
  font-size:22rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(0,0,0,1);
}
.pay-status .right view text:last-child{
  font-size:22rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:#ff1010;
}
/* pay status end */

/* border */
.border{
  width:100%;
  height:16rpx;
  background:rgba(246,246,246,1);
}
/* border-end */

/* Address */
.Address{
  width: 100%;
  min-height: 208rpx;
  box-sizing: border-box;
  padding:  0 30rpx;
}
.Address .title{
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  font-weight:600;
  color:rgba(0,0,0,1);
  line-height:34rpx;
  margin-top: 32rpx;
}
.Address .name{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 36rpx;
}
.Address .name .left,.Address .name .right{
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:34rpx;
}
.Address .content{
  margin-top: 30rpx;
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:34rpx;
}
/* Address end */
/* Product list */
.Product-list{
  width: 100%;
  height: auto;
  border-bottom: 1rpx solid rgba(246,246,246,1);
}
.product{
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.product .title{
  width:100%;
  font-size:28rpx;
  font-family:PingFangSC-Medium;
  font-weight:600;
  color:rgba(0,0,0,1);
  line-height:34rpx;
  margin-top: 40rpx;
}
.product .content{
  width:100%;
  height:150rpx;
  margin-top: 30rpx;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.product .content:last-child{
  margin-bottom: 40rpx;
}
.product .content .left{
  width:140rpx;
  height:140rpx;
  border:1rpx solid rgba(238, 238, 238, 1);
  border-radius:6rpx;
  box-sizing: border-box;
  padding:1rpx;
}
.product .content .left image{
  width: 100%;
  height: 100%;
  border-radius:6rpx;
}
.product .content .right{
  width: 516rpx;
  height: 100%;
}
.product .content .right .name{
  width:517rpx;
  height:64rpx;
  font-size:26rpx;
  font-family:PingFangSC-Light;
  font-weight:300;
  color:rgba(102,102,102,1);
  line-height:34rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}
.product .content .right .size text:first-child{
  width:134rpx;
  height:20rpx;
  font-size:20rpx;
  font-family:PingFangSC-Light;
  font-weight:300;
  color:rgba(187,187,187,1);
  line-height:34rpx;
}
.product .content .right .price {
  width:100%;
  height:19rpx;
  display: flex;
  justify-content: space-between;
}
.product .content .right .price text{
  font-size:26rpx;
  font-family:DINCond-Black;
  font-weight:400;
  color:rgba(0,0,0,1);
  line-height:34rpx;

}
/* Product list end */
/* message */
.message{
  width:100%;
  height:100rpx;
  background:rgba(255,255,255,1);
  box-sizing: border-box;
  padding: 0 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(246,246,246,1);
}
.message .left{
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.message .right{
 font-size:26rpx;
 font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(0,0,0,1);
}
.invoice{
  width:100%;
  height:100rpx;
  background:rgba(255,255,255,1);
  border-bottom: 1rpx solid rgba(246,246,246,1);
  box-sizing: border-box;
  padding: 0 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.invoice .right{
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(0,0,0,1);
  display: flex;
  align-items: center;
  
}
.invoice .left{
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(0,0,0,1);
}
.invoice .right image{
  width: 12rpx;
  height: 22rpx;
  float: right;
}
.invoice .right text{
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  margin-right: 20rpx;
}
.message2{
  width: 100%;
  height:100rpx;
  background:rgba(255,255,255,1);
  border-bottom: 1rpx solid rgba(246,246,246,1);
  box-sizing: border-box;
  padding: 0 28rpx;
  display: flex;
  align-items: center;
}
.message2 text:first-child{
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  margin-right: 20rpx;
}
.message2 text:last-child{
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:#000;
  margin-top:4rpx;
}
/* message end */

/* buy bottom */
.buy-bottom{
  width:100%;
  height:140rpx;
  position: fixed;
  bottom: 0;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 27px 0px rgba(0, 0, 0, 0.03);
  box-sizing: border-box;
  padding-top: 30rpx;
  padding-right: 30rpx;

}
.buy-bottom .right{
  width:300rpx;
  height:72rpx;
  background:linear-gradient(-30deg,rgba(251,91,34,1),rgba(255,16,16,1));
  border-radius:36rpx;
  text-align: center;
  line-height: 72rpx;
  font-size:26rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(255,255,255,1);
  float: right;
}
.buy-bottom .left{
  float: right;
  width:240rpx;
  height:72rpx;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(0, 0, 0, 1);
  border-radius:30rpx;
  margin-right: 30rpx;
  text-align: center;
  line-height: 72rpx;
  font-size:26rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(0,0,0,1);
}
.time{
  font-size:26rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:#000;
}
/* buy bottom */
