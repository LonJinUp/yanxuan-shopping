<!--pages/SecondaryPage/coupon/index.wxml-->
<view class='remind'>
  <image src='../../../images/tanhao.png'></image>
  <text>秒杀、商家直发商品暂不支持使用优惠券</text>
</view>

<!-- tab -->
<view class="swiper-tab">
  <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0">
    <text bindtap="clickTab" data-current="0">未使用(1)</text>
    <view class="bottom-border {{currentTab==0?'active':''}}"></view>
  </view>
  <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1">
    <text bindtap="clickTab" data-current="1">已使用(2)</text>
    <view class="bottom-border {{currentTab==1?'active':''}}"></view>
  </view>
  <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2">
    <text bindtap="clickTab" data-current="2">已失效(2)</text>
    <view class="bottom-border {{currentTab==2?'active':''}}"></view>
  </view>
</view>

<swiper current="{{currentTab}}" duration="300" bindchange="swiperTab">
  <swiper-item>
    <view class='coupon-list'>
      <view class='items'>
        <view class='left active'>
          <view class='val'>
            <text>￥</text>
            <text>50</text>
          </view>
          <view class='title'>满500可用</view>
        </view>
        <view class='right'>
          <view class='title'>
            <view class='active'>通用券</view>
            <view>全场通用</view>
          </view>
          <view class='time'>2019/02/22  23:23  已失效</view>
          <view class='details'>
            <text>详细信息</text>
            <image src='../../../images/bottom.png'></image>
          </view>
        </view>
      </view>
    </view>
  </swiper-item>
  <swiper-item>
   
  </swiper-item>
  <swiper-item>
    
  </swiper-item>
</swiper>
<!-- tab end -->