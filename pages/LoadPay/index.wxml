<!-- pay time -->
<view class='pay-time'>
  <image src='../../images/tanhao.png'></image>
  <view class='title'>
    <text>请在<text style="color:#ff1010">{{clock}}</text>完成支付,超时订单自动取消</text>
  </view>
</view>
<!-- pay time end -->

<!-- pay status -->
<view class='pay-status'>
  <view class='left'>
    <image src='../../images/qianbao.png'></image>
  </view>
  <view class='right'>
    <view>待支付</view>
    <view>
      <text>还需支付 </text>
      <text>￥<text style='font-weight:600;font-size:26rpx'>200</text></text>
