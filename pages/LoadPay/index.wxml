        <view class='name'>Converse Chuck 70 拼色 粉紫绿橙 紫丁香全球限量款</view>
        <view class='size'>
          <text>经典款 | 40码</text>
        </view>
        <view class='price'>
          <text>￥300</text>
          <text>x1</text>
        </view>
      </view>
    </view>
  </view>
  
</view>
<!-- Product list end -->
<!-- message -->
<view class='message'>
  <view class='left'>运费</view>
  <view class='right'>￥000.00</view>
</view>
