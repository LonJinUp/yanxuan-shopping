/* pages/SecondaryPage/MyFriend/index.wxss */
.MyFriend-list{
  width: 100%;
  height: 100%;
}
.MyFriend-list .items{
  width:100%;
  height:140rpx;
  background:rgba(255,255,255,1);
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 30rpx;
  border-bottom: 1rpx solid rgba(238,238,238,1);
}
.MyFriend-list .items .left{
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
}
.MyFriend-list .items .left image{
  width:100rpx;
  height:100rpx;
  border-radius:50%;
}
.MyFriend-list .items .left text{
  margin-left: 20rpx;
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(0,0,0,1);
}
.MyFriend-list .items .right{
  width: 50%;
  height: 100%;

}
.MyFriend-list .items .right .title{
  font-size:24rpx;
  font-family:PingFangSC-Light;
  font-weight:300;
  color:rgba(0,0,0,1);
  text-align: right;
  margin-top: 32rpx;
}
.MyFriend-list .items .right .number{
  font-size:30rpx;
  font-family:PingFangSC-Medium;
  font-weight:600;
  color:rgba(0,0,0,1);
  text-align: right;
  margin-top: 16rpx;
}
